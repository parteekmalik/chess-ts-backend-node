// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model profile {
  user_id       Int    @id @default(autoincrement())
  email         String @unique
  user_name     String @unique
  match_history Int[]
  live_match    Int    @default(-1)
}

model match {
  match_id   Int      @id @default(autoincrement())
  position   String   @default("rnbqkbnr/pppppppp/8/8/8/8/PPPPPPPP/RNBQKBNR w KQkq - 0 1")
  started_at String
  history    String[] @default([])
  reason     String   @default("")
  players    Json
  game_type  Json
  time       String[] @default([])
}

model watingplayer {
  request_id     Int     @default(autoincrement())
  user_id        String  @unique
  base_time      Int
  increment_time Int
  time           String
  match_id       Int     @default(-1)
  is_guest       Boolean
}

model users {
  user_name String @unique
  password  String
  user_id   Int    @unique @default(autoincrement())
}

model gest_users {
  user_id   Int    @unique @default(autoincrement())
  user_name String @unique
}

model puzzles {
  id              Int    @unique @default(autoincrement())
  fen             String
  moves           String
  rating          String
  rating_deviation String
  themes          String
  opening_tags     String
}
